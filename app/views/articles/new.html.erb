<h1>Create an article</h1>

<!-- need to initiate instance variable, @article, do this in controller -->
<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
    </p>
<% end %>

<!-- model backed form, rails provides formfor, to deal with forms, form_helpers -->